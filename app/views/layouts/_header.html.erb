<nav class="navbar navbar-expand-md">
  <div class="container">
    <%= link_to t(".brand"), root_path, class: "navbar-brand" %>
    <div class="collapse navbar-collapse text-center justify-content-center"
         id="navbar3SupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item mx-3">
          <%= link_to t(".home"), root_path, class: "nav-link text-dark" %>
        </li>
        <li class="nav-item mx-2">
          <%= link_to t(".restaurant"), root_path, class: "nav-link text-dark" %>
        </li>
        <li class="nav-item mx-2">
          <%= link_to t(".orders"), root_path, class: "nav-link text-dark" %>
        </li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="text" placeholder="Search">
        <button class="btn my-2 my-sm-0 btn-primary" type="submit">
          <%= t ".search" %>
        </button>
      </form>
    </div>
  </div>
  <div class="float-right">
    <%= link_to t(".signup"), signup_path,
                class: "btn navbar-btn btn-secondary mx-2 shadowed" %>
    <% if logged_in? %>
      <div class="btn-group">
        <%= link_to "#", class: "btn btn-outline-success dropdown-toggle",
          :"data-toggle" => "dropdown" do %>
          <%= t "accounts.account" %><b class="caret"></b>
        <% end %>
        <div class="dropdown-menu">
          <%= link_to t("accounts.profile"), current_user, class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to t("accounts.logout"), logout_path, class: "dropdown-item",
            method: :delete %>
        </div>
      </div>
    <% else %>
      <%= link_to t("layouts.header.signin"), signin_path,
        class: "btn btn-success navbar-btn" %>
    <% end %>
  </div>
</nav>
