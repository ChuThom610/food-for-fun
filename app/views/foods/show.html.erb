<div class="row align-items-center">
  <div class="col-md-6 detail-food">
    <h1>
      <strong><%= @food.name %>&nbsp;</strong>
      <%= link_to edit_food_path do %>
        <i class="fa fa-edit" id="i_edit" data-toggle="tooltip" title="Edit food">
        </i>
      <% end %>
    </h1>
    <p><%= t "food.label.description" %>:&nbsp;<%= @food.description %></p>
    <p><%= t "food.label.price" %>:&nbsp;<%= @food.price %>$</p>
  </div>
  <div class="row col-md-12">
    <% if @images.any? %>
      <% @images.each do |p| %>
        <div class="col-md-4 img_food">
          <%= image_tag p.image.url, class: "img-fluid",
            width: Settings.size_img, high: Settings.size_img,
            :crop => :fill %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
