<%= form_tag search_path, method: :get, class: "form-inline" do %>
  <div class="col-md-8">
    <%= search_field_tag :search, params[:search], class: "form-control", placeholder: "Search" %>
  </div>
  <div class="col-md-4">
    <%= submit_tag t("layouts.header.search"), name: nil, class: "btn btn-primary" %>
  </div>
<% end %>
