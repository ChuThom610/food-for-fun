<div class="row col-md-12">
  <% if @foods.any? %>
    <%= render "food" %>
  <% end %>
</div>

<div class="row restaurants">
  <% if @restaurants.any? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t "users.show.restaurant" %></th>
          <th><%= t "users.show.discription" %></th>
          <th><%= t "users.show.address" %></th>
          <th><%= t "users.show.phone" %></th>
        </tr>
      </thead>
      <tbody><%= render "restaurant" %></tbody>
    </table>
  <% end %>
</div>
